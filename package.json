{
  "name": "xpathtester",
  "displayName": "xpath_tester",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:xpathtester.helloWorld",
    "onView:xpathtester-sidebar"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "xpathtester-sidebar-view",
          "title": "XPath",
          "icon": "media/xpath.svg"
        }
      ]
    },
    "views": {
      "xpathtester-sidebar-view": [
        {
          "type": "webview",
          "id": "xpathtester-sidebar",
          "name": "XPath",
          "icon": "media/xpath.svg",
          "contextualTitle": "XPath"
        }
      ]
    },
    "commands": [
      {
        "command": "xpathtester.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "rollup": "rollup -c -w",
    "watch": "concurrently \"rollup -c -w\" \"tsc -watch -p ./\"",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-typescript": "^8.1.0",
    "@tsconfig/svelte": "^1.0.10",
    "@types/vscode": "^1.52.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "eslint": "^7.15.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "concurrently": "^5.3.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "rollup": "^2.3.4",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.31.1",
    "svelte-check": "^1.1.24",
    "svelte-preprocess": "^4.6.1",
    "ts-loader": "^8.0.11",
    "typescript": "^4.1.2",
    "vscode-test": "^1.4.1"
  },
  "dependencies": {
    "xmldom": "^0.4.0",
    "xpath": "0.0.32"
  }
}
